{
    "extends": "airbnb/base",
    "installedESLint": true,
    "plugins": [
        "import",
        "mocha"
    ],
    "globals": {
        "document": true,
        "window": true
    },
    "rules": {
        "import/no-extraneous-dependencies": ["error", { "devDependencies": ["!./tasks"] }],
        "no-param-reassign": ["error", {"props": false}],
        "no-plusplus": [0]
    }
}